{
   "$schema":"http://json-schema.org/draft-03/schema#",
   "id":"http://schemas.opengis.net/gsr/1.0/attachementInfos.json",
   "title":"attachment information",
   "type":"object",
   "properties":{
      "attachmentInfos":{
         "title":"list of attachments",
         "type":"array",
         "items":{
            "title":"attachment",
            "type":"object",
            "properties":{
               "id":{
                  "title":"identifier",
                  "type":"integer",
                  "required":true
               },
               "contentType":{
                  "title":"MIME type of attachment",
                  "type":"string"
               },
               "size":{
                  "title":"size in bytes",
                  "type":"integer"
               },
               "name":{
                  "title":"name",
                  "type":"string"
               }
            }
         }
      }
   }
}